@model RapidProject.VehicleRentMvc.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}

<h2>Delete Vehicle</h2>

<h3>Are you sure you want to delete this vehicle?</h3>
<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Make
        </dt>
        <dd class="col-sm-10">
            @Model.Make
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Year
        </dt>
        <dd class="col-sm-10">
            @Model.Year
        </dd>
        <dt class="col-sm-2">
            Rental Price
        </dt>
        <dd class="col-sm-10">
            @($"Rp {Model.RentalPrice:N0}")
        </dd>
        <dt class="col-sm-2">
            Availability Status
        </dt>
        <dd class="col-sm-10">
            @(Model.AvailabilityStatus == 1 ? "Available" : "Not Available")
        </dd>
        <dt class="col-sm-2">
            Vehicle Type
        </dt>
        <dd class="col-sm-10">
            @(Model.VehicleType != null ? Model.VehicleType.VehicleType1 : "Unknown")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="VehicleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
