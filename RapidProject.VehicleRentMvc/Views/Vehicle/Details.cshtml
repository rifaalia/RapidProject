@model RapidProject.VehicleRentMvc.ViewModels.RentalViewModel

@{
    ViewData["Title"] = "Rent Vehicle";
}

<h2>Rent @Model.VehicleMake @Model.VehicleModel</h2>

<form asp-action="Details" method="post">
    <div class="form-group">
        <label asp-for="UserId" class="control-label">User ID</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RentalStartDate" class="control-label">Rental Start Date</label>
        <input asp-for="RentalStartDate" class="form-control" type="date" />
        <span asp-validation-for="RentalStartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RentalEndDate" class="control-label">Rental End Date</label>
        <input asp-for="RentalEndDate" class="form-control" type="date" />
        <span asp-validation-for="RentalEndDate" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="VehicleId" />
    <input type="hidden" asp-for="VehicleMake" />
    <input type="hidden" asp-for="VehicleModel" />
    <div class="form-group">
        <input type="submit" value="Rent" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

